            "meta_description": {
                "config": {
                    "label": "Meta Description",
                    "placeholder": "A brief summary of the page"
                },
                "type": "StructuredText"
            },
            "keywords": {
                "type": "Text",
                "config": {
                    "label": "Keywords",
                    "placeholder": ""
                }
            },
            "noindex": {
                "type": "Boolean",
                "config": {
                    "label": "noindex",
                    "placeholder_false": "false",
                    "placeholder_true": "true",
                    "default_value": false
                }
            }
        }
    }
