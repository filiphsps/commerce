                        "content_block": {
                            "type": "SharedSlice"
                        },
                        "columns": {
                            "type": "SharedSlice"
                        },
                        "alert": {
                            "type": "SharedSlice"
                        },
                        "vendors": {
                            "type": "SharedSlice"
                        },
                        "collection": {
                            "type": "SharedSlice"
                        },
                        "text_block": {
                            "type": "SharedSlice"
                        },
                        "banner": {
                            "type": "SharedSlice"
                        },
                        "icon_grid": {
                            "type": "SharedSlice"
                        },
                        "collapsible_text": {
                            "type": "SharedSlice"
                        },
                        "image_grid": {
                            "type": "SharedSlice"
                        }
                    }
                }
            }
        },
        "SEO & Metadata": {
            "meta_image": {
                "config": {
                    "constraint": {
                        "height": 1260,
                        "width": 2400
                    },
                    "label": "Meta Image",
