{
    "id": "product_page",
    "label": "Product Page",
    "format": "page",
    "repeatable": true,
    "status": true,
    "json": {
        "Main": {
            "uid": { "config": { "label": "UID" }, "type": "UID" },
            "slices": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": { "choices": { "collapsible_text": { "type": "SharedSlice" } } }
            }
        },
        "SEO & Metadata": {
            "meta_description": {
                "config": {
                    "label": "Meta Description",
                    "placeholder": "A brief summary of the page"
                },
                "type": "StructuredText"
            },
            "meta_image": {
                "config": {
                    "constraint": { "height": 1260, "width": 2400 },
                    "label": "Meta Image",
                    "thumbnails": []
                },
                "type": "Image"
            },
            "meta_title": {
                "config": {
                    "label": "Meta Title",
                    "placeholder": "A title of the page used for social media and search engines"
                },
                "type": "Text"
            }
        },
        "Secondary": {
            "slices2": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": {
                    "choices": {
                        "collection": { "type": "SharedSlice" },
                        "carousel": { "type": "SharedSlice" },
                        "text_block": { "type": "SharedSlice" },
                        "image_grid": { "type": "SharedSlice" },
                        "icon_grid": { "type": "SharedSlice" },
                        "vendors": { "type": "SharedSlice" },
                        "collapsible_text": { "type": "SharedSlice" }
                    }
                }
            }
        }
    }
}
