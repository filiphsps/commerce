{
    "id": "collection_page",
    "label": "Collection Page",
    "format": "page",
    "repeatable": true,
    "status": true,
    "json": {
        "Main": {
            "uid": {
                "config": { "label": "UID", "placeholder": "collection-handle" },
                "type": "UID"
            },
            "enable_header": {
                "type": "Boolean",
                "config": {
                    "label": "Show built-in header",
                    "placeholder_false": "false",
                    "placeholder_true": "true",
                    "default_value": true
                }
            },
            "enable_collection": {
                "type": "Boolean",
                "config": {
                    "label": "Show built-in collection component",
                    "placeholder_false": "false",
                    "placeholder_true": "true",
                    "default_value": true
                }
            },
            "enable_body": {
                "type": "Boolean",
                "config": {
                    "label": "Show built-in description/body",
                    "placeholder_false": "false",
                    "placeholder_true": "true",
                    "default_value": true
                }
            },
            "slices": {
                "type": "Slices",
                "fieldset": "Slice Zone",
                "config": {
                    "choices": {
                        "alert": { "type": "SharedSlice" },
                        "vendors": { "type": "SharedSlice" },
                        "collection": { "type": "SharedSlice" },
                        "text_block": { "type": "SharedSlice" },
                        "banner": { "type": "SharedSlice" },
                        "icon_grid": { "type": "SharedSlice" },
                        "collapsible_text": { "type": "SharedSlice" },
                        "image_grid": { "type": "SharedSlice" },
                        "carousel": { "type": "SharedSlice" },
                        "spacing": { "type": "SharedSlice" }
                    }
                }
            }
        },
        "SEO & Metadata": {
            "meta_description": {
                "config": {
                    "label": "Meta Description",
                    "placeholder": "A brief summary of the page"
                },
                "type": "StructuredText"
            },
            "meta_image": {
                "config": {
                    "constraint": { "height": 1260, "width": 2400 },
                    "label": "Meta Image",
                    "thumbnails": []
                },
                "type": "Image"
            },
            "meta_title": {
                "config": {
                    "label": "Meta Title",
                    "placeholder": "A title of the page used for social media and search engines"
                },
                "type": "Text"
            }
        },
        "Visuals": {
            "accent_primary": {
                "type": "Color",
                "config": { "label": "Primary accent", "placeholder": "" }
            },
            "accent_primary_dark": {
                "type": "Boolean",
                "config": {
                    "label": "Primary accent luminosity",
                    "placeholder_false": "light",
                    "placeholder_true": "dark",
                    "default_value": false
                }
            },
            "accent_secondary": {
                "type": "Color",
                "config": { "label": "Secondary accent", "placeholder": "" }
            },
            "accent_secondary_dark": {
                "type": "Boolean",
                "config": {
                    "label": "Secondary accent luminosity",
                    "placeholder_false": "light",
                    "placeholder_true": "dark",
                    "default_value": false
                }
            }
        }
    }
}
