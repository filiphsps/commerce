{
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.locale": "en",
    "typescript.surveys.enabled": false,
    "git.autofetch": "all",
    "git.countBadge": "tracked",
    "git.fetchOnPull": true,
    "git.inputValidationSubjectLength": 72,
    "git.inputValidationLength": 72,
    "git.inputValidation": true,
    "git.showPushSuccessNotification": true,
    "github.copilot.enable": {
        "plaintext": "true",
        "markdown": "true"
    },
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    //"editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
    "editor.renderWhitespace": "all",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.fixAll.prettier": "explicit",
        "source.organizeImports": "explicit",
        "source.sortMembers": "explicit"
    },
    "files.associations": {
        "**/*.hbs": "plaintext",
        "LICENSE": "plaintext",
        ".eslintrc": "jsonc",
        ".renovaterc": "json"
    },
    "[plaintext]": {
        "editor.formatOnSave": false
    },
    "[git-commit]": {
        "editor.rulers": [72],
        "editor.wordWrap": "off",
        "workbench.editor.restoreViewState": false
    },
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.next": true,
        "**/.svn": true,
        "**/*.tsbuildinfo": true,
        "**/CVS": true,
        "**/junit.xml": true,
        //"**/node_modules": true,
        "**/Thumbs.db": true
    },
    "files.autoSave": "off",
    "files.trimTrailingWhitespace": true,
    "files.eol": "\n",
    "files.trimFinalNewlines": false,
    "git.enableCommitSigning": true,
    "git.mergeEditor": false,
    "git-graph.graph.colours": ["#ED1E79", "#EDD382", "#274690"],
    "cSpell.words": [
        "Albin",
        "autofocus",
        "Bergsgatan",
        "changefreq",
        "colord",
        "compat",
        "Componentizable",
        "Dahlqvist",
        "datasource",
        "Deca",
        "dotenvx",
        "ecomm",
        "ecommerce",
        "Etags",
        "Filiph",
        "filiphsandstrom",
        "filiphsps",
        "googlebot",
        "Götaland",
        "HSTS",
        "ipgeolocation",
        "jsonld",
        "Judgeme",
        "klaviyo",
        "lastmod",
        "learnq",
        "Lexend",
        "Lightningcss",
        "markdoc",
        "Mellerud",
        "metafield",
        "metafields",
        "myshopify",
        "neshca",
        "nextauth",
        "nextjs",
        "Nordcom",
        "Nordstar",
        "nosnippet",
        "nprogress",
        "nums",
        "overscroll",
        "pagetype",
        "predev",
        "Preloadable",
        "prismic",
        "Prismic",
        "prismicio",
        "registrator",
        "renderable",
        "Sädesbingen",
        "Sahlin",
        "Sandström",
        "signin",
        "Siitam",
        "slicemachine",
        "Sobolewski",
        "sonner",
        "stylesheet",
        "Subframes",
        "sweetsideofsweden",
        "tailwindcss",
        "testid",
        "thirdparties",
        "timeframes",
        "toploader",
        "treeshake",
        "Trollhättan",
        "tsbuildinfo",
        "typecheck",
        "unoptimized",
        "uuidv",
        "Västra",
        "Vercel",
        "virtuals",
        "wakatime",
        "webp",
        "Woohoo"
    ],
    "markdownlint.config": {
        "single-title": false,
        "no-inline-html": false,
        "list-indent": true,
        "list-marker-space": {
            "ol_multi": 1,
            "ol_single": 1,
            "ul_multi": 3,
            "ul_single": 3
        }
    },
    "javascript.inlayHints.enumMemberValues.enabled": true,
    "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
    "javascript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
    "typescript.inlayHints.enumMemberValues.enabled": true,
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
    "typescript.inlayHints.variableTypes.enabled": true,
    "typescript.inlayHints.parameterTypes.enabled": true,
    "prettier.printWidth": 120,
    "[markdown]": {
        "editor.formatOnType": true
    },
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "prettier.requireConfig": true,
    "prettier.configPath": "./.prettierrc",
    "github.copilot.advanced": {
        "length": 1200
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.prettierPath": "./node_modules/prettier",

    "tailwindCSS.classAttributes": ["class", "className", ".*ClassName", ".*Styles"],
    "tailwindCSS.lint.invalidVariant": "warning",
    "tailwindCSS.colorDecorators": true,
    "tailwindCSS.experimental.classRegex": [
        "[a-zA-Z]*ClassName='([^']+)'",
        "[a-zA-Z]*ClassName=\"([^\"]+)\"",
        "[a-zA-Z]*ClassName={`([^`]+)`}",
        ["Styles\\s*=\\s*([^;]*);", "'([^']*)'"],
        ["Styles\\s*=\\s*([^;]*);", "\"([^\"]*)\""],
        ["Styles\\s*=\\s*([^;]*);", "\\`([^\\`]*)\\`"],
        ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
        ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
    ],
    "tailwindCSS.includeLanguages": {
        "html": "html",
        "javascript": "javascript",
        "css": "css"
    },
    "editor.quickSuggestions": {
        "strings": true
    },
    "git.defaultBranchName": "master",
    "git.autofetchPeriod": 30,
    "git.similarityThreshold": 72,
    "vitest.rootConfig": "./vitest.config.ts",
    "vitest.workspaceConfig": "./vitest.workspace.ts"
}
