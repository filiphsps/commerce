{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "types": ["node", "vitest/globals", "happy-dom"],
        "noEmit": true
    },
    "include": [
        "packages/**/*.test.*",
        "apps/**/*.test.*",
        "apps/**/vitest.config.ts",
        "vitest.config.ts",
        "**/*/vite.config.ts"
    ],
    "exclude": ["**/.turbo", "**/build", "**/coverage", "**/dist", "**/node_modules", "**/public"]
}
