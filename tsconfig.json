{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "types": ["vitest/globals", "@testing-library/jest-dom"],
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node10",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "removeComments": true,
        "jsx": "preserve",
        "incremental": true,
        "downlevelIteration": false,
        "strictNullChecks": true,
        "baseUrl": ".",
        "rootDir": "./",
        "paths": {
            "@/components/*": ["./src/components/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/api/*": ["./src/api/*"],
            "@/models/*": ["./src/models/*"],
            "@/utils/*": ["./src/utils/*"],
            "@/style/*": ["./src/scss/*"],

            // i18n
            "@/i18n/*": ["./src/locales/*"],
            "@/i18n/dictionarie": ["./src/app/[locale]/dictionarie.ts"],

            // Prismic
            "@/slices/*": ["./src/slices/*"],
            "@/slices": ["./src/slices/index"],
            "@/prismic/types": ["./prismicio-types.d.ts"],
            "@/prismic": ["./prismicio.ts"]
        }
    },
    "exclude": ["node_modules", "public"],
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "prismicio-types.d.ts",
        "./src/@types",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
