{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "removeComments": false,
        "jsx": "preserve",
        "incremental": true,
        "downlevelIteration": false,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/hooks/*": ["src/hooks/*"],
            "@/api/*": ["src/api/*"],
            "@/models/*": ["src/models/*"],
            "@/utils/*": ["src/util/*"],
            "@/style/*": ["src/scss/*"],

            // Prismic
            "@/slices/*": ["src/slices/*"],
            "@/slices": ["src/slices/index"],
            "@/prismic/types": ["prismicio-types"],
            "@/prismic": ["prismicio"]
        }
    },
    "exclude": ["dist", "node_modules", "out", "public", ".next", "next.config.mjs"],
    "include": [
        "next-env.d.ts",
        "prismic-types.d.ts",
        ".next/types/**/*.ts",
        "./src/",
        "./src/@types",
        "**/*.ts",
        "**/*.tsx"
    ]
}
