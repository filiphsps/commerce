{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local", "tsconfig.json", "package.json"],
    "pipeline": {
        "build": {
            "cache": true,
            "dependsOn": ["^build"],
            "outputs": ["**/.next/**", "!**/.next/cache/**", "!**/coverage/**", "!**/*.md", "!**/*.yml"]
        },
        "lint": { "cache": false },
        "prettier": { "cache": false },
        "test": { "cache": false, "outputs": ["**/coverage/**"] },
        "typecheck": { "cache": false },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "slicemachine": {
            "cache": false,
            "persistent": true
        }
    }
}
