{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local", "tsconfig.json", "package.json"],
    "pipeline": {
        "build": {
            "cache": true,
            "dependsOn": ["^build"],
            "outputs": ["**/.next/**", "!*/**/.next/cache/**", "!*/**/coverage/**", "!*/**/*.md", "!*/**/*.yml"]
        },
        "lint": {
            "cache": false,
            "dependsOn": ["^lint"]
        },
        "prettier": {
            "cache": false
        },
        "test": {
            "cache": false,
            "dependsOn": ["^test"],
            "outputs": ["**/coverage/**"]
        },
        "typecheck": {
            "cache": false,
            "dependsOn": ["^typecheck"]
        },
        "fix": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "slicemachine": {
            "cache": false,
            "persistent": true
        }
    }
}
