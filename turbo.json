{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "globalDependencies": [
        "**/.env.*local",
        "tsconfig.json",
        "**/tsconfig.json",
        "vite.config.ts",
        "**/vite.config.ts",
        "package.json",
        "**/package.json",
        ".env"
    ],
    "tasks": {
        "build": {
            "cache": true,
            "dependsOn": ["^build"],
            "outputs": ["**/.next/**", "!*/**/.next/cache/**", "!*/**/coverage/**", "dist/**"],
            "inputs": ["$TURBO_DEFAULT$", ".env.production.local", ".env.local", ".env.production", ".env"]
        },
        "clean": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "inputs": ["$TURBO_DEFAULT$", ".env.development.local", ".env.local", ".env.development", ".env"]
        },
        "lint": {
            "cache": false,
            "dependsOn": ["^build"]
        },
        "prettier": {
            "cache": false
        },
        "typecheck": {
            "cache": false,
            "dependsOn": ["^build"]
        },
        "format": {
            "cache": false
        },
        "slicemachine": {
            "cache": false,
            "persistent": true
        }
    }
}
