{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "globalDependencies": [
        "**/.env.*local",
        "tsconfig.json",
        "**/tsconfig.json",
        "vite.config.ts",
        "**/vite.config.ts",
        "package.json",
        "**/package.json",
        ".env",
        "**/.env",
        "*.env",
        "**/*.env"
    ],
    "tasks": {
        "build": {
            "cache": true,
            "outputLogs": "new-only",
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"],
            "inputs": ["$TURBO_DEFAULT$", "!README.md", ".env.production.local", ".env.local", ".env.production", ".env"]
        },
        "clean": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "inputs": ["$TURBO_DEFAULT$", ".env.development.local", ".env.local", ".env.development", ".env"]
        },
        "lint": {
            "cache": false,
            "dependsOn": ["^build"]
        },
        "fix:lint": {
            "cache": false
        },
        "prettier": {
            "cache": false
        },
        "typecheck": {
            "cache": false,
            "dependsOn": ["^build"]
        },
        "format": {
            "cache": false
        },
        "slicemachine": {
            "cache": false,
            "persistent": true
        }
    }
}
