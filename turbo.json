{
    "$schema": "https://turbo.build/schema.json",
    "globalDotEnv": [".env"],
    "globalDependencies": ["**/.env.*local", "**/tsconfig.json", "**/package.json"],
    "pipeline": {
        "build": {
            "cache": true,
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**", "!coverage/**", "!**/*.yml"],
            "dotEnv": [".env.production.local", ".env.local", ".env.production", ".env"]
        },
        "lint": {
            "cache": false,
            "dependsOn": ["^lint"]
        },
        "prettier": {
            "cache": false
        },
        "test": {
            "cache": false,
            "dependsOn": ["^test"],
            "outputs": ["**/coverage/**"],
            "dotEnv": [".env.test.local", ".env.test", ".env"]
        },
        "typecheck": {
            "cache": false,
            "dependsOn": ["^typecheck"]
        },
        "fix": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dotEnv": [".env.development.local", ".env.local", ".env.development", ".env"]
        },
        "slicemachine": {
            "cache": false,
            "persistent": true
        }
    }
}
