{
    "$schema": "https://turbo.build/schema.json",
    "globalDotEnv": [".env"],
    "globalDependencies": [
        "**/.env.*local",
        "bun.lockb",
        "tsconfig.json",
        "**/tsconfig.json",
        "vite.config.ts",
        "**/vite.config.ts",
        "package.json",
        "**/package.json"
    ],
    "pipeline": {
        "build": {
            "cache": true,
            "dependsOn": ["^build"],
            "outputs": ["**/.next/**", "!**/.next/cache/**", "!**/coverage/**", "dist/**"],
            "dotEnv": [".env.production.local", ".env.local", ".env.production", ".env"]
        },
        "clean": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dotEnv": [".env.development.local", ".env.local", ".env.development", ".env"]
        },
        "lint": {
            "cache": false,
            "dependsOn": ["^build"]
        },
        "prettier": {
            "cache": false
        },
        "typecheck": {
            "cache": false,
            "dependsOn": ["^build"]
        },
        "fix": {
            "cache": false
        },
        "slicemachine": {
            "cache": false,
            "persistent": true
        }
    }
}
