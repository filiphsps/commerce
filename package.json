{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@nordcom/commerce",
    "version": "2.1.0",
    "private": true,
    "type": "module",
    "cacheDirectories": [
        ".next/cache",
        "apps/**/.next/cache"
    ],
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "prepare": "husky || true",
        "predev": "prisma generate --no-engine",
        "dev": "dotenv -c -- turbo run dev --env-mode=loose",
        "dev:admin": "dotenv -c -- turbo run dev --filter='./apps/admin' --env-mode=loose",
        "dev:landing": "dotenv -c -- turbo run dev --filter='./apps/landing' --env-mode=loose",
        "dev:storefront": "dotenv -c -- turbo run dev --filter='./apps/storefront' --env-mode=loose",
        "prebuild": "prisma generate --no-engine",
        "build": "pnpm run prebuild && dotenv -c -- turbo run build --env-mode=loose --remote-cache-timeout=60",
        "build:packages": "turbo run build --filter='./packages/*' --env-mode=loose --remote-cache-timeout=60",
        "clean": "turbo run clean",
        "lint": "turbo run lint",
        "prettier": "prettier **/src/**/*.{ts,tsx,scss} --check",
        "format": "concurrently pnpm:format:* && turbo run format",
        "format:eslint": "eslint --fix **/src/**/*.{ts,tsx}",
        "format:prettier": "prettier --write **/src/**/*.{ts,tsx,scss,json}",
        "typecheck": "turbo run typecheck",
        "test": "dotenv -c -- vitest run --coverage",
        "slicemachine": "turbo run slicemachine --env-mode=loose"
    },
    "author": {
        "name": "Nordcom Group Inc.",
        "email": "hi@nordcom.io",
        "url": "https://nordcom.io/"
    },
    "contributors": [
        {
            "name": "Filiph Siitam Sandstr√∂m",
            "email": "filiph@nordcom.io",
            "url": "https://github.com/filiphsps/"
        }
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NordcomInc/ecommerce.git"
    },
    "keywords": [
        "nextjs",
        "react"
    ],
    "bugs": {
        "url": "https://github.com/NordcomInc/ecommerce/issues"
    },
    "homepage": "https://shops.nordcom.io/",
    "dependencies": {
        "@nordcom/nordstar": "0.0.55"
    },
    "devDependencies": {
        "@nordcom/prettier": "0.1.1",
        "@prisma/client": "5.12.0",
        "@types/node": "20.12.7",
        "@types/react": "18.2.75",
        "@types/react-dom": "18.2.24",
        "@typescript-eslint/eslint-plugin": "7.6.0",
        "@typescript-eslint/parser": "7.6.0",
        "@vitejs/plugin-react": "4.3.1",
        "@vitest/coverage-v8": "1.5.0",
        "babel-plugin-module-resolver": "5.0.2",
        "concurrently": "8.2.2",
        "dotenv-cli": "7.4.2",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-jsdoc": "48.5.0",
        "eslint-plugin-jsx-a11y": "6.9.0",
        "eslint-plugin-prettier": "5.2.1",
        "eslint-plugin-react": "7.34.4",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-simple-import-sort": "12.1.0",
        "eslint-plugin-unused-imports": "4.0.0",
        "glob": "11.0.0",
        "husky": "9.1.0",
        "lint-staged": "15.2.7",
        "mongoose": "8.4.0",
        "prettier": "3.3.3",
        "prettier-eslint": "16.3.0",
        "prettier-plugin-tailwindcss": "0.6.5",
        "prisma": "5.12.0",
        "turbo": "2.0.5",
        "turbo-ignore": "2.0.5",
        "typescript": "5.5.3",
        "vite": "5.3.4",
        "vite-plugin-dts": "3.8.3",
        "vite-tsconfig-paths": "4.3.2",
        "vitest": "1.5.0"
    },
    "optionalDependencies": {
        "@rollup/rollup-darwin-arm64": "4.18.0",
        "@rollup/rollup-linux-x64-gnu": "4.18.0"
    },
    "overrides": {
        "@typescript-eslint/typescript-estree": "7.14.1",
        "esbuild": "0.23.0",
        "psl": "npm:@filiphsandstrom/psl@2.0.0"
    },
    "packageManager": "pnpm@9.5.0"
}
