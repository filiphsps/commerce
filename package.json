{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@nordcom/commerce",
    "version": "2.0.0",
    "private": true,
    "type": "module",
    "engines": {
        "npm": ">=8",
        "node": ">=18 <=21"
    },
    "cacheDirectories": [
        ".next/cache",
        "apps/**/.next/cache"
    ],
    "prettier": "@nordcom/prettier",
    "scripts": {
        "prepare": "husky install",
        "postinstall": "prisma generate --no-engine > /dev/null",
        "start": "turbo run start",
        "predev": "prisma generate --no-engine  > /dev/null",
        "dev": "turbo run dev",
        "build:vercel": "prisma migrate deploy",
        "prebuild": "prisma generate --no-engine  > /dev/null",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "prettier": "prettier **/src/**/*.{ts,tsx,scss} --check",
        "fix": "turbo run fix",
        "fix:prettier": "prettier **/src/**/*.{ts,tsx,scss} --write",
        "typecheck": "turbo run typecheck",
        "test": "turbo run test",
        "slicemachine": "turbo run slicemachine"
    },
    "author": {
        "name": "Nordcom Group Inc.",
        "email": "hi@nordcom.io",
        "url": "https://nordcom.io/"
    },
    "contributors": [
        {
            "name": "Filiph Siitam SandstrÃ¶m",
            "email": "filiph@nordcom.io",
            "url": "https://github.com/filiphsps/"
        }
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NordcomInc/ecommerce.git"
    },
    "keywords": [
        "nextjs",
        "react"
    ],
    "bugs": {
        "url": "https://github.com/NordcomInc/ecommerce/issues"
    },
    "homepage": "https://shops.nordcom.io/",
    "browserslist": [
        ">0.5%",
        "defaults",
        "not ie 11",
        "not ie <= 10",
        "not and_ff <= 119",
        "not firefox <= 121",
        "supports es6-module",
        "supports css-grid"
    ],
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "devDependencies": {
        "@nordcom/prettier": "0.1.1",
        "@typescript-eslint/eslint-plugin": "6.18.1",
        "@typescript-eslint/parser": "6.18.1",
        "@vitejs/plugin-react": "4.2.1",
        "@vitest/coverage-v8": "1.1.3",
        "babel-plugin-module-resolver": "5.0.0",
        "concurrently": "8.2.2",
        "eslint": "8.56.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-jsdoc": "48.0.2",
        "eslint-plugin-jsx-a11y": "6.8.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-react": "7.33.2",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-unused-imports": "3.0.0",
        "husky": "8.0.3",
        "lint-staged": "15.2.0",
        "prettier": "3.1.1",
        "prisma": "5.8.0",
        "turbo": "1.11.3",
        "typescript": "5.3.3"
    },
    "optionalDependencies": {
        "@rollup/rollup-darwin-arm64": "4.9.4",
        "@rollup/rollup-linux-x64-gnu": "4.9.4"
    }
}
