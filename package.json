{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@nordcom/commerce",
    "version": "2.0.0",
    "private": true,
    "type": "module",
    "packageManager": "bun@1.0.30",
    "engines": {
        "node": ">=18 <=21"
    },
    "cacheDirectories": [
        ".next/cache",
        "apps/**/.next/cache"
    ],
    "prettier": "@nordcom/prettier",
    "scripts": {
        "prepare": "husky",
        "postinstall": "prisma generate --no-engine",
        "predev": "prisma generate --no-engine",
        "dev": "dotenv -c -- turbo run dev",
        "prebuild": "prisma generate --no-engine",
        "build": "dotenv -c -- turbo run build",
        "build:packages": "turbo run build --filter='./packages/*'",
        "lint": "turbo run lint",
        "prettier": "prettier **/src/**/*.{ts,tsx,js,scss} --check",
        "fix": "turbo run fix",
        "fix:prettier": "prettier **/src/**/*.{ts,tsx,js,scss} --write",
        "typecheck": "turbo run typecheck",
        "test": "turbo run test",
        "slicemachine": "turbo run slicemachine"
    },
    "author": {
        "name": "Nordcom Group Inc.",
        "email": "hi@nordcom.io",
        "url": "https://nordcom.io/"
    },
    "contributors": [
        {
            "name": "Filiph Siitam SandstrÃ¶m",
            "email": "filiph@nordcom.io",
            "url": "https://github.com/filiphsps/"
        }
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NordcomInc/ecommerce.git"
    },
    "keywords": [
        "nextjs",
        "react"
    ],
    "bugs": {
        "url": "https://github.com/NordcomInc/ecommerce/issues"
    },
    "homepage": "https://shops.nordcom.io/",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "devDependencies": {
        "@nordcom/prettier": "0.1.1",
        "@prisma/client": "5.10.2",
        "@typescript-eslint/eslint-plugin": "7.1.1",
        "@typescript-eslint/parser": "7.1.1",
        "@vitejs/plugin-react": "4.2.1",
        "@vitest/coverage-v8": "1.3.1",
        "babel-plugin-module-resolver": "5.0.0",
        "concurrently": "8.2.2",
        "dotenv-cli": "7.4.0",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-import": "2.29.1",
        "eslint-plugin-jsdoc": "48.2.1",
        "eslint-plugin-jsx-a11y": "6.8.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-react": "7.34.0",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-unused-imports": "3.1.0",
        "husky": "9.0.11",
        "lint-staged": "15.2.2",
        "prettier": "3.2.5",
        "prisma": "5.10.2",
        "turbo": "1.12.5",
        "turbo-ignore": "1.12.5",
        "typescript": "5.4.2"
    },
    "optionalDependencies": {
        "@rollup/rollup-darwin-arm64": "4.12.1",
        "@rollup/rollup-linux-x64-gnu": "4.12.1"
    }
}
