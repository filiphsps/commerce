{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "public": false,
    "trailingSlash": true,
    "framework": "nextjs",
    "buildCommand": "npm run build:vercel && turbo build",
    "devCommand": "turbo dev",
    "outputDirectory": "apps/web/.next",
    "github": {
        "enabled": true,
        "autoJobCancelation": true
    },
    "crons": [
        {
            "path": "/admin/api/heartbeat",
            "schedule": "*/15 * * * *"
        }
    ]
}
